#include <iostream>
#include <iomanip> //setw()
using namespace std;

int main() {
    int sum = 0;
    int i;
    int j;
    int k;

    for (i =1; i<= 5; i++) {
        sum = sum + i;
        cout << "When i is " << i << "The sum is " << sum << endl;
        for (j =2; j<= 3; j++) {
            sum = sum + j;
            cout << "When j is " << j << "The sum is " << sum << endl;

        }
    }
    i + j;


    cout << "Multiplation Table \n";
    cout << " =============================== \n";
    cout << j  << "  |";

    //Multiplication version of for loop
    for (i = 1; i< 13; i++) {
        cout << setw(4) << i;


    }
    cout << "\n";
    for (int j = 01; j < 13; j++) {
        cout << j  << "  |";
        for (int k = 01; k < 13; k++) {
            cout << setw(4) << j*k;
        }
        cout << "\n";
    }

}
